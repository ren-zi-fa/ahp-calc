{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./typings",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["lib/**/*"]
}
